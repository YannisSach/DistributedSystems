import java.net.*;
import java.io.*;

public class Server extends Thread{
	public int idx;
	public int myId;
	public int nextId;
	public int prevId;
	public MySocket prevSock, nextSock, DHTSock;
	public static int Nodes = 0;
	
	public Server(int idx, int myId,int nextId,int prevId,int DHTport){
		this.idx = idx;
		this.myId = myId;
		this.nextId = nextId;
		this.prevId = prevId;
		this.prevSock = this.nextSock = null;
		this.DHTSock = new MySocket(DHTport);
		Server.Nodes++;
	}
	
	public void run() {
		System.out.println("Hello from a thread!" + myId);
	    
	    while (true){
	    	
	    }
	}
	
	
	
	public static void debug(String msg){
		
		if (Util.db)
			System.out.println("" + idx + "(" + myId + ")" + msg);
	}

}
